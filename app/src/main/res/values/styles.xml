<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!-- App branding color for JustJava's menu bar -->
        <item name="colorPrimary">#795548</item>
        <!-- App branding color for phones menu bar -->
        <item name="colorPrimaryDark">#5D4037</item>
        <!-- App branding color for the text fields and checkboxes-->
        <item name="colorAccent">#3E2723</item>
    </style>

    <style name="CustomText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#008</item>
        <item name="android:textStyle">italic</item>
    </style>
    
    <!-- Style for header text in Java app -->
    <style name="HeaderTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- Style for checkboxes in Java app -->
    <style name="CheckboxStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">24dp</item> //Pushes text to the left of checkbox by X dp
    </style>

</resources>
